{
  "openapi": "3.0.2",
  "info": {
    "description": "Demo App",
    "title": "Demo App",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "security": [
    {
      "BasicAuth": []
    }
  ],
  "paths": {
    "/setup": {
      "post": {
        "summary": "Setup the App database",
        "responses": {
          "200": {
            "description": "App set completed"
          },
          "400": {
            "description": "Setup has already been run"
          }
        }
      }
    },
    "/upload_resume": {
      "post": {
        "description": "Upload a new candidate's resume",
        "parameters": [
          {
            "name": "clientIPAddress",
            "in": "header",
            "description": "Mock client IP Address",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["first_name", "last_name", "email", "phone", "dob", "ssn"],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "John"
                  },
                  "last_name": {
                    "type": "string",
                    "example": "Smith"
                  },
                  "email": {
                    "type": "string",
                    "example": "john.smith@gmail.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "408-555-1212"
                  },
                  "dob": {
                    "type": "string",
                    "example": "06-28-1999"
                  },
                  "ssn": {
                    "type": "string",
                    "example": "123-44-5678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Resume accepted"
          },
          "400": {
            "description": "Resume denied"
          },
          "403": {
            "description": "Sanctioned country application blocked"
          }
        }
      }
    },
    "/employee/{email}": {
      "get": {
        "description": "Returns a single employee record by email",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "description": "email of employee to fetch",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Record retrieved"
          },
          "400": {
            "description": "Bad request"
          }
        }
      }
    },
    "/update_employee": {
      "post": {
        "description": "Updates an employee record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "john.smith@gmail.com"
                  },
                  "start_date": {
                    "type": "string",
                    "example": "07-05-2022"
                  },
                  "term_date": {
                    "type": "string",
                    "example": "07-05-2022"
                  },
                  "department": {
                    "type": "string",
                    "example": "sales"
                  },
                  "salary": {
                    "type": "integer",
                    "format": "int32",
                    "example": 100000
                  },
                  "status": {
                    "type": "integer",
                    "format": "int32",
                    "enum": [3, 4, 5]
                  },
                  "company_email": {
                    "type": "string",
                    "example": "john.smith@acme.com"
                  },
                  "manager_id": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Record updated"
          },
          "404": {
            "description": "Employee record not found"
          },
          "500": {
            "description": "internal database error"
          }
        }
      }
    }
  }
}
